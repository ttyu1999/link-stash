// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id          String   @id @default(cuid())
  url         String   @unique
  title       String
  description String?
  category    String?
  tags        String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([category])
  @@index([createdAt])
  @@map("notes")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String?  @default("#3b82f6")
  createdAt   DateTime @default(now())
  
  @@map("categories")
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String?  @default("#6b7280")
  createdAt DateTime @default(now())
  
  @@map("tags")
}
